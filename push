#!/bin/bash

## example usage:
## bash push "commit message"

rsync -arvuP --delete-excluded --exclude-from=exclude ~/.emacs.d/ .emacs.d/
rsync -avuP ~/.emacs .
git add .
if [ -z "$1" ]
then
    echo message: $0
    git commit -a -m "$0"
else
    echo message: $1
    git commit -a -m "$1"
fi
# git push -u origin master
git push git@github.com:stakahama/dot-emacs.git master
